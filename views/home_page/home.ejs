<!-- header section starts  -->

<header>

    <div class="user">
        <img src="<%= para_detail.photo %>" alt="">
        <h3 class="name"><%= para_detail.first_name %> <%= para_detail.last_name %></h3>
    </div>

    <nav class="navbar">
        <ul>
            <li><a href="#home">home</a></li>
            <li><a href="#about">about</a></li>
            <li><a href="#education">education</a></li>
            <li><a href="#portfolio">portfolio</a></li>
            <li><a href="#contact">contact</a></li>
        </ul>
    </nav>

</header>

<!-- header section ends -->

<div id="menu" class="fas fa-bars"></div>

<!-- home section starts  -->

<section class="home" id="home">

    <h3>HI THERE !</h3>
    <h1>I'M <span><%= para_detail.first_name %> <%= para_detail.last_name %></span></h1>
    <p><%= para_detail.status%>
    </p>
    <a href="#about"><button class="btn">about me <i class="fas fa-user"></i></button></a>

</section>

<!-- home section ends -->

<!-- about section starts  -->

<section class="about" id="about">

<h1 class="heading"> <span>about</span> me </h1>

<div class="row">

    <div class="info">
        <h3> <span> name : </span> <%= para_detail.first_name %> <%= para_detail.last_name %> </h3>
        <h3> <span> date of birth : </span> <%= para_detail.dob.toISOString().split('T')[0] %> </h3>
        <h3> <span> Gender : </span> <%= para_detail.gender %> </h3>
        <h3> <span> Contact : </span> <%= para_detail.contact %> </h3>
        <h3> <span> Position : </span> <%= para_detail.position %> </h3>
        <h3 style="text-transform: none"> <span> Email : </span>  <%= para_detail.email %> </h3>
        <a href="<%= para_detail.cv %>"><button class="btn"> download CV <i class="fas fa-download"></i> </button></a>
    </div>

    <div class="counter">

        <div class="box">
            <span><%= para_portfolio.length %>+</span>
            <h3>certificate & porject</h3>
        </div>

    </div>

</div>

</section>

<!-- about section ends -->

<!-- education section starts  -->

<section class="education" id="education">

<h1 class="heading"> my <span>education</span> </h1>

<div class="box-container">
    
    <% para_education.forEach(edu => { %>
    <a href="<%= edu.link %>">
    <div class="box">
        <i class="fas fa-graduation-cap"></i>
        <span><%= edu.year %></span>
        <h3><%= edu.title %></h3>
        <p><%= edu.description %></p>
    </div>
    </a>
    <% }) %>
</div>

</section>

<!-- education section ends -->

<!-- portfolio section starts  -->

<section class="portfolio" id="portfolio">

<h1 class="heading"> my <span>portfolio</span> </h1>

<div class="box-container">

    <% para_portfolio.forEach(port => { %>
    <a href="<%= port.link %>">
    <div class="box" style="position: relative;">
        <img src="<%= port.pic %>" alt="">
        <h3 style="color: white; font-size:large;  position: absolute; top: 0.2em; left:0.2em;"><%= port.title %></h3>
        <p style="color: white; font-size:small; position: absolute; top: 2em; left:1em;"><%= port.description %></p>
    </div>
    </a>
    <% }) %>

</div>

</section>

<!-- portfolio section ends -->

<!-- contact section starts  -->

<section class="contact" id="contact">

<h1 class="heading"> <span>contact</span> me </h1>

<div class="row">

    <div class="content">

        <h3 class="title">contact info</h3>

        <div class="info">
            <h3 style="text-transform: none"> <i class="fas fa-envelope"></i><%= para_detail.email %></h3>
            <h3> <i class="fas fa-phone"></i><%= para_detail.contact %></h3>
            <h3> <i class="fas fa-map-marker-alt"></i> Jhansi, India - 284001. </h3>
        </div>

    </div>

    <form action="">

        <input type="text" placeholder="name" class="box">
        <input type="email" placeholder="email" class="box">
        <input type="text" placeholder="project" class="box">
        <textarea name="" id="" cols="30" rows="10" class="box message" placeholder="message"></textarea>
        <button type="submit" class="btn"> send <i class="fas fa-paper-plane"></i> </button>

    </form>

</div>

</section>

<!-- contact section ends -->


